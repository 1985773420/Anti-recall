<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:showIn="@layout/cell">

    <!--Title-->
    <RelativeLayout
        android:id="@+id/cell_title_unfold_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title">

        <TextView
            android:id="@+id/cell_title_unfold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/cell_title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_title_date"
            android:paddingEnd="@dimen/margin_three_quarter"
            android:paddingStart="@dimen/margin_three_quarter"
            android:text="@string/title_date"
            android:textColor="@color/text_color_title_date" />
    </RelativeLayout>

    <include layout="@layout/list_multi_messages" />

</LinearLayout>
